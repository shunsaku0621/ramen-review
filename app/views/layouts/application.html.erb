<!DOCTYPE html>
<html>
  <head>
    <title>RamenReview</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/a6a126b071.js" crossorigin="anonymous"></script>
  </head>

  <body>
  <% if flash[:notice] %>
      <div class="notification is-info">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <p class="navbar-item">
            <strong style="font-family: cursive; color: black;"><%= link_to "ramen review", root_path, class:"is-size-3" %></strong>
        </p>
        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>
      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <%= link_to "ラーメン店一覧", ramen_shops_path, class: "navbar-item" %>
        </div>
        <div class="navbar-end">
          <div class="navbar-item">
            <% if user_signed_in? %>
              <p class="navbar-item">ようこそ <%= current_user.name %> さん</p>
            <% end %>
            <div class="buttons">
              <% if user_signed_in? %>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "button" %>
              <% else %>
                <%= link_to "ログイン", new_user_session_path, class: "button" %>
                <%= link_to "新規登録", new_user_registration_path, class: "button" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <%= breadcrumbs separator: " &rsaquo; " %>   
    <%= yield %>
  </body>
</html>
